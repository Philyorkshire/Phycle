@using CyclePro.Data

@{
    var count = 1;
}

<section class="row">
    <h5>Raw Data View</h5>
    <table>
        <tr>
            <td></td>
            <td>Heart Rate</td>

            @if (Hrm.PrimaryHrm.Features.Speed)
            {
                <td>Speed</td>
            }
            @if (Hrm.PrimaryHrm.Features.Cadence)
            {
                <td>Cadence</td>
            }
            @if (Hrm.PrimaryHrm.Features.Altitude)
            {
                <td>Altitude</td>
            }
            @if (Hrm.PrimaryHrm.Features.Pressure)
            {
                <td>Pressure</td>
            }

            <td>Distance</td>
            <td>Total Distance</td>
            <td>Date Time</td>
            <td></td>
        </tr>

        
            @foreach (var i in Hrm.PrimaryHrm.Data)
            {
                <tr>
                    <td><b>@count</b></td>
                    <td>@i.Hr</td>

                    @if (Hrm.PrimaryHrm.Features.Speed)
                    {
                        <td>@i.Speed</td>
                    }
                    @if (Hrm.PrimaryHrm.Features.Cadence)
                    {
                        <td>@i.Cadence</td>
                    }
                    @if (Hrm.PrimaryHrm.Features.Altitude)
                    {
                        <td>@i.Altitude</td>
                    }
                    @if (Hrm.PrimaryHrm.Features.Power)
                    {
                        <td>@i.Power</td>
                    }
                    @if (Hrm.PrimaryHrm.Features.Pressure)
                    {
                        <td>@i.Pressure</td>
                    }

                    <td>@i.Distance</td>
                    <td>@i.TotalDistance</td>
                    <td>@i.DateTime</td>
                    <td>Edit</td>
                </tr>
                {
                    count++;
                }
            }
    </table>

</section>